from gpiozero import RGBLED
from gpiozero import Buzzer
from time import sleep

led = RGBLED(red=17, green=22, blue=27)
buzzer = Buzzer(26)

while True:
    led.color=(1,0,0)
    #buzzer.on()
    sleep(2)
    led.color=(0,1,0)
    #buzzer.off()
    sleep(2)
    led.color=(0,0,1)
    #buzzer.on()
    sleep(2)
    #buzzer.off()
    led.off()
    sleep(2)